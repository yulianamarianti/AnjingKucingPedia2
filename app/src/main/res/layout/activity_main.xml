<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/judul_main"
        android:textStyle="bold"
        android:textColor="@color/design_default_color_primary_dark"
        android:textSize="25sp"
        android:layout_marginBottom="32dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        >
        <ImageButton
            android:id="@+id/btn_buka_ras_kucing"
            android:padding="16dp"
            android:layout_margin="8dp"
            android:layout_width="100dp"
            android:layout_weight="1"
            android:layout_height="100dp"
            android:src="@drawable/cat_angora"
            android:scaleType="fitCenter"
            />
        <ImageButton
            android:id="@+id/btn_buka_ras_anjing"
            android:padding="16dp"
            android:layout_margin="8dp"
            android:layout_width="100dp"
            android:layout_weight="1"
            android:layout_height="100dp"
            android:src="@drawable/dog_kintamani"
            android:scaleType="fitCenter"
            />
        <ImageButton
            android:id="@+id/btn_ras_ayam"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:src="@drawable/img_20211111_wa0048"
            android:scaleType="fitCenter"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/notif"
        android:textStyle="italic"
        android:layout_marginBottom="32dp"
        />
    <Button
        android:id="@+id/btn_Biodata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Biodata"/>

</LinearLayout>
